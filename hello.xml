<context>
<input pattern="(hi|hello) *">
  <output value="Hi! What is your favorite color?"/>

  <context>
    <sample>
      <item>Green</item>
      <item>Blue</item>
      <item>Red</item>
    </sample>
    <input pattern="$Text">
      <var name="UserName" value="$Text" scope="user"/>
      <output value="Nice! I like $Text too!"/>
    </input>
  </context>
</input>
</context>
