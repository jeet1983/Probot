<context>
<input pattern="(hi|hello) *">
  <output value="Hi! How Can I Help you today ? I can provide following information-"/>

  <context>
    <sample>
      <item>Query Incidents</item>
      <item>Query Leads</item>
      <item>Query Accounts</item>
    </sample>
    <input pattern="$Text">
      <var name="Action" value="$Text" scope="user"/>
      <output value="Nice! I will help you with  $Action too!"/>
    </input>
  </context>
</input>
</context>
